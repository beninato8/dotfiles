#!/usr/bin/env python3

import pandas as pd
import matplotlib.pyplot as plt

data = pd.read_csv('~/.data/battery_health_uniq.csv', header=None, names=['time','mA'])
data.time = pd.to_datetime(data['time'], format='%Y-%m-%d')
data.set_index(['time'],inplace=True)

data.plot()

days = (data.index[-1] - data.index[0])
days = days.days
charge = (data['mA'][0] - data['mA'][-1])
# print(days, charge)
plt.title(f'{charge/days:.2f} mAh lost per day')

# design = 6559
# loss = charge/design
# print(design/charge)
# print(f'{loss/days:.4f}% of max capacity lost per day')
# print(days, charge)
plt.show()